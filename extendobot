#!/usr/bin/ruby1.9.1

require 'cinch'
require_relative './classes/Util'

utils = Util::Util.instance;
bots = Util::BotFamily.instance
servers = utils.getServers()
servers.each { |serv| 
	if serv['autoconnect']
		bots.add( {
			"host" => serv['host'],
			"name" => serv['name']
			}
		) 
		puts "autoconnect to #{serv['name']}"
	end
	puts "ignoring #{serv['name']}"
}	
bots.startAll
utils.MainLoop
