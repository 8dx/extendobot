#!/usr/bin/ruby1.9.1

require 'cinch'
require_relative './classes/Util'

utils = Util::Util.instance;
bots = Util::BotFamily.instance
servers = utils.getServers()
servers.each { |serv| 
	bots.add( {
		"host" => serv['host'],
		"name" => serv['name']
		}
	) if serv['autoconnect']
}	
bots.startAll
utils.MainLoop
